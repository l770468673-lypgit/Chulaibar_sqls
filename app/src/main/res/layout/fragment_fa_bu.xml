                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:src="@mipmap/post_fabu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="上传"
                        android:textColor="#7D7D8E"
                        android:textSize="10sp"/>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/iv_address_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/address_fabu"/>

            <TextView
                android:id="@+id/tv_address_fabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iv_address_fabu"
                android:gravity="center_vertical"
                android:text="活动地址"
                android:textColor="#7D7D8E"
                android:textSize="12sp"/>

            <RelativeLayout

                android:id="@+id/rl_city_fabu"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_address_fabu">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_arrow_down"
                    android:gravity="right|center_vertical"
                    android:text="省市"
                    android:textColor="#7D7D8E"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_arrow_down"
                    android:layout_width="12dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_down_fabu"/>
            </RelativeLayout>

            <!--<LinearLayout-->
            <!--android:id="@+id/ll_city_fabu"-->
            <!--android:layout_toRightOf="@+id/tv_address_fabu"-->
            <!--android:layout_marginLeft="40dp"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="match_parent">-->
