            <!--android:id="@+id/address"-->
            <!--android:text="省市"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="#7D7D8E"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->
            <!--<ImageView-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:src="@mipmap/arrow_down_fabu"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_width="12dp"-->
            <!--android:layout_height="6dp" />-->
            <!--</LinearLayout>-->

            <!--<HorizontalScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_toRightOf="@+id/rl_city_fabu">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rl_city_fabu">

                <TextView
                    android:id="@+id/tv_detailaddress_fabu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="详细地址"
                    android:textColor="#7D7D8E"
                    android:textSize="12sp"/>

            </LinearLayout>


            <!--</HorizontalScrollView>-->


        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/iv_time_start_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/start_time"/>

            <TextView
                android:id="@+id/tv_huodongtime_fabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iv_time_start_fabu"
                android:gravity="center_vertical"
                android:hint="活动时间"
                android:textColor="#7D7D8E"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_huodongtime_start_fabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/tv_huodongtime_fabu"
                android:background="@null"
                android:focusable="false"
                android:hint="开始"
                android:textColor="#7D7D8E"
                android:textColorHint="#7D7D8E"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_time_divider_fabu"
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/et_huodongtime_start_fabu"
                android:background="#7D7D8E"/>

            <EditText
                android:id="@+id/et_huodongtime_end_fabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/iv_time_divider_fabu"
                android:background="@null"
                android:focusable="false"
                android:hint="截止"
                android:textColor="#7D7D8E"
                android:textColorHint="#7D7D8E"
                android:textSize="12sp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv_edit_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/detail_huodong_fabu"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/iv_edit_fabu"
                android:background="@drawable/et_detail_fabu_background"
                android:orientation="vertical"
                android:padding="4dp">


                <LinearLayout
                    android:id="@+id/lly_addview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_fenlei_fabu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:hint="活动详情描述......"
                        android:paddingBottom="8dp"
                        android:textColor="#7D7D8E"
                        android:textColorHint="#7D7D8E"
                        android:textSize="12sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_huodong_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"


                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_user_imgs"
                            android:layout_width="wrap_content"
