<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:context="com.tianyi.chulaibar.fragment.FaBuFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_logo_fabu"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/logo_shouye"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/iv_name_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/name_huodong_fabu"/>

            <EditText
                android:id="@+id/et_name_fabu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iv_name_fabu"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="活动名称"
                android:textColor="#7D7D8E"
                android:textColorHint="#7D7D8E"
                android:textSize="12sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/iv_fenlei_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/fenlei_fabu"/>

            <Spinner
                android:id="@+id/spinner_fenlei_fabu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_fenlei_fabu"
                android:gravity="center_vertical"
                android:spinnerMode="dialog"
                android:text="活动类型"
                android:textSize="12sp"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_fenlei_fabu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iv_fenlei_fabu"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_fenlei_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="活动类型"
                    android:textColor="#7D7D8E"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_down_fabu"/>
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:id="@+id/iv_haibao_fabu"
                android:layout_width="20dp"
                android:layout_height="20dp"
