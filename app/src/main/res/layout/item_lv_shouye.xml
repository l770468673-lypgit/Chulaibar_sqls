<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#f5f5f5">

<ImageView
    android:layout_marginLeft="10dp"
    android:id="@+id/iv_item_lv_shouye"
    android:layout_width="104dp"
    android:layout_height="80dp"
    android:src="@mipmap/chuangye_s"/>

<TextView
    android:layout_marginLeft="7dp"
    android:layout_marginRight="32dp"
    android:layout_toRightOf="@+id/iv_item_lv_shouye"
    android:maxLines="2"
    android:id="@+id/tv_title_item_lv_shouye"
    android:text="青岛2016荧光电子音乐节免费门票青岛"
    android:textSize="12sp"
    android:textColor="#333333"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<LinearLayout
    android:layout_below="@+id/tv_title_item_lv_shouye"
    android:layout_alignParentRight="true"
    android:layout_marginRight="14dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_touxiang_item_lv_shouye"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:src="@mipmap/icon_chulaibar"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_nikename_item_lv_shouye"
        android:text="出来bar"
        android:textSize="10sp"
        android:textColor="#5cb56e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

<LinearLayout
    android:layout_toRightOf="@+id/iv_item_lv_shouye"
    android:layout_marginTop="65dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="7dp"
        android:id="@+id/tv_city"
        android:text="青岛市"
        android:textSize="10sp"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="7dp"
        android:id="@+id/tv_time"
        android:text="2016/11/11"
        android:textSize="10sp"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

<ImageView
    android:id="@+id/iv_footer_divider"
    android:layout_toRightOf="@+id/iv_item_lv_shouye"
    android:layout_marginTop="85dp"
    android:background="#e8e8e8"
    android:layout_width="180dp"
    android:layout_height="1dp" />

    
</RelativeLayout>
