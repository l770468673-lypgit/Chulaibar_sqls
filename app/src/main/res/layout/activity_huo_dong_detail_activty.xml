<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_total"
            tools:context="com.tianyi.chulaibar.activity.HuoDongDetailActivty">

<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_head_activity_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <!-- view 横线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:background="#4daf63"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#282b36"/>

        </LinearLayout>


        <!--青岛出来吧科技发展有限公司-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:background="#fff"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0f0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_touxiang_activity_detail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="21dp"
                    android:src="@mipmap/icon_chulaibar"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-15dp"
                    android:layout_toRightOf="@+id/iv_touxiang_activity_detail"
                    android:src="@mipmap/contact_detail"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="#f0f">

                <TextView
                    android:id="@+id/tv_name_hoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="青岛出来吧科技发展有限公司"
                    android:textColor="#4daf63"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_connect_hoster"
                    android:layout_width="62dp"
                    android:layout_height="17dp"
                    android:layout_below="@+id/tv_name_hoster"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/contact_hoster_activity_detali_background"
                    android:gravity="center"
                    android:text="联系主办方"
                    android:textColor="#23b596"
                    android:textSize="10sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_connect_hoster"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_connect_hoster"
                    android:src="@mipmap/wrz_qy_wode"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff0">

                <TextView
                    android:id="@+id/tv_gaugnzhu"
                    android:layout_width="53dp"
                    android:layout_height="23dp"
                    android:background="@drawable/guanzhu_detial_background"
                    android:gravity="center"
                    android:text="+关注"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>


        <!--张惠妹-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_name_huodong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:text="张惠妹“乌托邦2.0庆典”世界巡回演唱会-上海站"
                    android:textColor="#262728"
                    android:textSize="13sp"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="19dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="￥180-200"
                    android:textColor="#4daf63"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_huodong_state"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="进行中"
                    android:textColor="#4daf63"
                    android:textSize="10sp"/>
            </LinearLayout>


        </LinearLayout>

        <!--收藏，浏览和报名人数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f2f2f2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/collection_detail"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#0f0"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="#8c94a2"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_collection_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(300)"
                        android:textColor="#8c94a2"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_preview_num"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="1710"
                    android:textColor="#393959"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="9dp"
                    android:text="浏览"
                    android:textColor="#8c94a2"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_baoming_num"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="100"
                    android:textColor="#393959"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报名"
                        android:textColor="#8c94a2"
                        android:textSize="10sp"/>

                    <TextView
