<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff">

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/iv_item_lv_recommend_activity_detail"
            android:layout_width="104dp"
            android:layout_height="80dp"
            android:src="@mipmap/chuangye_s"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@+id/iv_item_lv_recommend_activity_detail"
            android:id="@+id/tv_title_item_lv_recommend_activity_detail"
            android:maxLines="2"
            android:text="青岛2016荧光电子音乐节免费门票青岛"
            android:textSize="12sp"
            android:textColor="#262728"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_touxiang_item_lv_recommend_activity_detail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_chulaibar"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_nikename_item_lv_recommend_activity_detail"
                android:text="出来bar"
                android:textSize="10sp"
                android:textColor="#262728"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/iv_item_lv_recommend_activity_detail"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_address_lv_recommend_activity_detail"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/address_fabu"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:id="@+id/tv_address_item_lv_recommend_activity_detail"
                android:layout_toRightOf="@+id/iv_address_lv_recommend_activity_detail"
                android:layout_marginLeft="9dp"
                android:text="青岛市市南区"
                android:textSize="10sp"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_item_lv_activity_detail"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_lv_recommend_activity_detail"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/iv_item_lv_recommend_activity_detail"
            android:layout_toEndOf="@+id/iv_item_lv_recommend_activity_detail">


            <ImageView
                android:id="@+id/iv_time_lv_recommend_activity_detail"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/start_time_faxian"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_marginLeft="7dp"
                android:id="@+id/tv_time_item_lv_recommend_activity_detail"
                android:text="2016/11/11"
                android:textSize="10sp"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_footer_divider"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</RelativeLayout>
